<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".ui.MainActivity">

        <TextView
            android:id="@+id/txt_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="45sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/img_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="40dp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@+id/txt_appName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <Button
            android:id="@+id/btn_quiz"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:text="@string/quiz"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:elevation="10dp"
            android:textAllCaps="false"
            android:layout_marginTop="90dp"
            android:background="@drawable/button_state"
            app:layout_constraintTop_toBottomOf="@+id/txt_welcome"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/search"
            android:layout_marginTop="150dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/settings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/txt_appName"/>

        <ImageView
            android:id="@+id/ic_settings"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/ic_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:contentDescription="@string/settings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageButton
            android:id="@+id/img_btn_info"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/info_title"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_info"
            android:layout_marginTop="25dp"
            android:layout_marginStart="80dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/img_btn_dark"/>

        <ImageButton
            android:id="@+id/img_btn_dark"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/credit"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@mipmap/eclipse"
            android:layout_marginTop="25dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_btn_info"
            app:layout_constraintRight_toLeftOf="@+id/img_btn_contact"/>

        <ImageButton
            android:id="@+id/img_btn_contact"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/contact_title"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_feedback"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="60dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_btn_dark"
            app:layout_constraintRight_toRightOf="parent" />
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
            app:layout_constraintRight_toRightOf="parent"
            ads:layout_constraintLeft_toLeftOf="parent"
            ads:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>