<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context=".game.JoinGame"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/txt_EnterGameCode"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_code_title"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/txt_join_title"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_game"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
        android:id="@+id/editTxt_gameCode"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textbox_outline"
        android:textColor="@android:color/white"
        android:hint="@string/enter_code"
        android:textAlignment="center"
        android:inputType="text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_EnterGameCode"
        android:importantForAutofill="no" />
    <TextView
        android:id="@+id/txt_EnterGameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/enter_game_name_title"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxt_gameCode"/>
    <EditText
        android:id="@+id/editTxt_gameName"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:background="@drawable/textbox_outline"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:hint="@string/enter_game_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_EnterGameName"
        android:importantForAutofill="no" />
    <Button
        android:id="@+id/btn_join_game"
        android:text="@string/join_game"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_state"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTxt_gameName"/>
    <ImageButton
        android:id="@+id/img_btn_info"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="@string/info_title"
        android:background="?android:selectableItemBackground"
        app:srcCompat="@mipmap/info"
        android:layout_marginTop="35dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_EnterGameCode"
        app:layout_constraintLeft_toRightOf="@+id/editTxt_gameCode" />
    <ImageButton
        android:id="@+id/img_btn_info2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="@string/info_title"
        android:background="?android:selectableItemBackground"
        app:srcCompat="@mipmap/info"
        android:layout_marginTop="35dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_EnterGameName"
        app:layout_constraintLeft_toRightOf="@+id/editTxt_gameName" />
    <ProgressBar
        android:id="@+id/join_progBar"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"
        android:elevation="15dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="@id/btn_join_game"
        app:layout_constraintTop_toTopOf="@id/btn_join_game"/>

</androidx.constraintlayout.widget.ConstraintLayout>