<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quiz_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context=".game.QuizActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/txt_quizQuestion"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/textbox_outline"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:text="@string/quiz_question"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/txt_timer"
        android:text="@string/quiz_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="50sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_category"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ani_loading"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="150dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="false"
        app:lottie_fileName="load.json"
        android:elevation="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ani_correct"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="300dp"
        app:lottie_loop="false"
        app:lottie_autoPlay="false"
        app:lottie_fileName="correct.json"
        android:elevation="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ani_wrong"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="300dp"
        app:lottie_loop="false"
        app:lottie_autoPlay="false"
        app:lottie_fileName="wrong.json"
        android:elevation="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/btn_fake"
        android:text="@string/quiz_fake"
        android:layout_gravity="end"
        android:layout_width="125dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/button_state"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_quizQuestion"/>
    <Button
        android:id="@+id/btn_fact"
        android:text="@string/quiz_fact"
        android:layout_gravity="center_vertical"
        android:layout_width="125dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_state"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_quizQuestion"/>
    <Button
        android:id="@+id/btn_next"
        android:text="@string/next_quiz_question"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:background="@drawable/button_state"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_quizQuestion"/>
    <ImageView
        android:id="@+id/img_category"
        android:focusable="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/history"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:contentDescription="@string/settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/txt_correct"
        android:text="@string/correct_ans"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_marginBottom="200dp"
        android:textColor="@color/gold"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ani_correct"/>
    <TextView
        android:id="@+id/txt_wrong"
        android:text="@string/wrong_ans"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_marginBottom="200dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ani_correct"/>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
        app:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>