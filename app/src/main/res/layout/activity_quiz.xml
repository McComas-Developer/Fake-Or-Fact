<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quiz_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context=".game.QuizActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/txt_quizQuestion"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quiz_question"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ani_loading"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="150dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="false"
        app:lottie_fileName="load.json"
        android:elevation="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ani_correct"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="300dp"
        app:lottie_loop="false"
        app:lottie_autoPlay="false"
        app:lottie_fileName="correct.json"
        android:elevation="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ani_wrong"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="300dp"
        app:lottie_loop="false"
        app:lottie_autoPlay="false"
        app:lottie_fileName="wrong.json"
        android:elevation="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/btn_fake"
        android:text="@string/quiz_fake"
        android:layout_gravity="end"
        android:layout_width="125dp"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/button_state"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_quizQuestion"/>
    <Button
        android:id="@+id/btn_fact"
        android:text="@string/quiz_fact"
        android:layout_gravity="center_vertical"
        android:layout_width="125dp"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_state"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_quizQuestion"/>
    <Button
        android:id="@+id/btn_next"
        android:text="@string/next_quiz_question"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:background="@drawable/button_state"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_quizQuestion"/>
    <ImageView
        android:id="@+id/img_category"
        android:focusable="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/history"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/txt_correct"
        android:text="@string/correct_ans"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_marginBottom="200dp"
        android:textColor="@color/gold"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ani_correct"/>
    <TextView
        android:id="@+id/txt_wrong"
        android:text="@string/wrong_ans"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_marginBottom="200dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ani_correct"/>

</androidx.constraintlayout.widget.ConstraintLayout>