<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Quiz">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/quiz_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/txt_quizQuestion"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/textbox_outline"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:text="@string/quiz_question"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/card_category"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/txt_question_count"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quiz_count"
            android:layout_marginTop="160dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/txt_timer"
            android:text="@string/quiz_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="70dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textSize="50sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/card_category"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ani_loading"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="150dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="false"
            app:lottie_fileName="load.json"
            android:elevation="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
            android:id="@+id/btn_fake"
            android:text="@string/quiz_fake"
            android:layout_gravity="end"
            android:layout_width="125dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:translationZ="5dp"
            android:background="@drawable/button_state"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_fact"
            app:layout_constraintTop_toBottomOf="@+id/txt_quizQuestion"/>
        <Button
            android:id="@+id/btn_fact"
            android:text="@string/quiz_fact"
            android:layout_gravity="center_vertical"
            android:layout_width="125dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:translationZ="5dp"
            android:background="@drawable/button_state"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_fake"
            app:layout_constraintTop_toBottomOf="@+id/txt_quizQuestion"/>
        <Button
            android:id="@+id/btn_next"
            android:text="@string/next_quiz_question"
            android:layout_gravity="center_horizontal"
            android:layout_width="270dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="115dp"
            android:translationZ="5dp"
            android:background="@drawable/button_state"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_quizQuestion"/>
        <Button
            android:id="@+id/btn_explain"
            android:text="@string/quiz_explain"
            android:layout_gravity="center_horizontal"
            android:layout_width="270dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:translationZ="5dp"
            android:background="@drawable/button_state"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_next"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            android:translationZ="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/img_category"
                    android:focusable="true"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:srcCompat="@drawable/history"
                    android:contentDescription="@string/settings"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
            app:layout_constraintRight_toRightOf="parent"
            ads:layout_constraintLeft_toLeftOf="parent"
            ads:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/quiz_fragment"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>