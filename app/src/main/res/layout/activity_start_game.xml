<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context=".QuizFragment"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/txt_startCategory"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quiz_title"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/btn_Start_History"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/history"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:textAlignment="viewStart"
        android:drawableStart="@drawable/history"
        android:background="@drawable/round_button_quiz"
        app:layout_constraintTop_toBottomOf="@+id/txt_startCategory"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Button
        android:id="@+id/btn_Start_Science"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/science"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:textAlignment="viewStart"
        android:drawableStart="@drawable/science"
        android:background="@drawable/round_button_quiz"
        app:layout_constraintTop_toBottomOf="@+id/txt_startCategory"
        app:layout_constraintLeft_toRightOf="@+id/btn_Start_History"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/btn_Start_Art"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/art"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textAlignment="viewStart"
        android:drawableStart="@drawable/art"
        android:background="@drawable/round_button_quiz"
        app:layout_constraintTop_toBottomOf="@+id/btn_Start_History"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_Start_Random"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/random"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textAlignment="viewStart"
        android:drawableStart="@drawable/random"
        android:background="@drawable/round_button_quiz"
        app:layout_constraintTop_toBottomOf="@+id/btn_Start_Science"
        app:layout_constraintLeft_toRightOf="@+id/btn_Start_Art"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ani_start_historyCheck"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        app:lottie_loop="false"
        app:lottie_autoPlay="false"
        app:lottie_fileName="checkmark.json"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_startCategory"
        app:layout_constraintLeft_toLeftOf="parent" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ani_start_scienceCheck"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        app:lottie_loop="false"
        app:lottie_autoPlay="false"
        app:lottie_fileName="checkmark.json"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_startCategory"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ani_start_artCheck"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:lottie_loop="false"
        app:lottie_autoPlay="false"
        app:lottie_fileName="checkmark.json"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_Start_History"
        app:layout_constraintRight_toRightOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ani_start_randomCheck"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:lottie_loop="false"
        app:lottie_autoPlay="false"
        app:lottie_fileName="checkmark.json"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_Start_Science"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>