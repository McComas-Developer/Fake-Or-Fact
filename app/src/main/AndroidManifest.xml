<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.michael.fakeorfact">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/fakeorfact_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/fakeorfact_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- Ad Info -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-9060745523188945~8738030290" />
        <!-- Enable Log for Performance Tests -->
        <meta-data
            android:name="firebase_performance_logcat_enabled"
            android:value="true" />

        <activity android:name=".game.multi.WaitScreen" />
        <activity android:name=".Egg"
            android:screenOrientation="portrait"/>

        <activity android:name=".game.multi.MultiPlayer" />
        <activity
            android:name=".game.QuizActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game.multi.StartGame"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game.QuizSelect"
            android:screenOrientation="portrait" />
        <activity
            android:name=".splash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game.multi.JoinGame"
            android:screenOrientation="portrait" />
    </application>

</manifest>