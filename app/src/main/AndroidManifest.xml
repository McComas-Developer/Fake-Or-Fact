<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.michael.fakeorfact">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/fakeorfact_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/fakeorfact_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".QuizActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".StartGame" android:screenOrientation="portrait"/>
        <activity android:name=".JoinGame" android:screenOrientation="portrait"/>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait"/>
        <activity android:name=".QuizSelect" android:screenOrientation="portrait"/>
        <activity android:name=".SplashActivity" android:theme="@style/SplashTheme" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>